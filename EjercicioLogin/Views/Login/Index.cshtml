@using (Html.BeginForm("LoginUsuario", "Login", FormMethod.Post))
{
<h2>Debes loguearte primero!</h2>
<div class="row">
    <label for="txtUsuario">Usuario:</label>
    <input class="form-control" type="text" id="txtUsuario" name="txtUsuario" />
</div>
<div class="row">
    <label for="txtPassword">Contraseña:</label>
    <input class="form-control" type="password" id="txtPassword" name="txtPassword" />
</div>
<p></p>
<div class="row">
    <button class="btn btn-primary" type="submit" id="btnIngresar" name="btnIngresar">Iniciar sesión</button>
    <button class="btn btn-primary" type="submit" id="btnRegistrar" name="btnRegistrar">Registrarse</button>
</div>
}

